<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:latin="http://schemas.android.com/apk/res/org.icfoss.inputmethod.indic"
>
    <include
        latin:keyboardLayout="@xml/key_styles_common" />
    <Row latin:keyWidth="9.1%p">
        <include latin:keyboardLayout="@xml/rowkeys_gujarati1" />
    </Row>
    <Row latin:keyWidth="10%p">
        <include latin:keyboardLayout="@xml/rowkeys_gujarati2"
            latin:keyXPos="5%p" />
    </Row>
    <Row latin:keyWidth="9.5%p">
        <Key
            latin:keyStyle="shiftKeyStyle"
            latin:keyWidth="10.8%p"
            latin:visualInsetsRight="1%p" />
        <include
            latin:keyboardLayout="@xml/rowkeys_gujarati3" />
        <Key
            latin:keyStyle="deleteKeyStyle"
            latin:keyWidth="fillRight"
            latin:visualInsetsLeft="1%p" />
    </Row>
    <include
        latin:keyboardLayout="@xml/row_qwerty4" />
</merge>
